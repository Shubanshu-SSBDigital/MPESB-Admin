@{
    var title = ViewData["Title"] ?? "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - MpEsb</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />

    <!-- AdminLTE -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/custom.css" />

</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <span class="nav-link text-white">
                        Welcome, @User.Identity?.Name
                    </span>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar -->
        <aside class="main-sidebar elevation-4 sidebar-dark-primary">

            <!-- Brand Logo -->
            <a asp-controller="Home" asp-action="Index" class="brand-link text-center">
                <span class="brand-text font-weight-light">MpEsb</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-3">
                    <ul class="nav nav-pills nav-sidebar flex-column"
                        data-widget="treeview"
                        role="menu">

                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-controller="Home"
                               asp-action="Index"
                               class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>


                        <!-- Functional Modules -->
                      

                        <!-- 8.1 Candidate Registration -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="CandidateRegistration" class="nav-link">
                                <i class="nav-icon fas fa-user-plus"></i>
                                <p>Candidate Registration</p>
                            </a>
                        </li>

                        <!-- 8.2 Job Management -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="JobManagement" class="nav-link">
                                <i class="nav-icon fas fa-briefcase"></i>
                                <p>Job & Vacancy Management</p>
                            </a>
                        </li>

                        <!-- 8.3 Evaluation -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="Evaluation" class="nav-link">
                                <i class="nav-icon fas fa-search"></i>
                                <p>Evaluation & Screening</p>
                            </a>
                        </li>

                        <!-- 8.4 Selection -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="Selection" class="nav-link">
                                <i class="nav-icon fas fa-file-signature"></i>
                                <p>Selection & Smart Contract</p>
                            </a>
                        </li>

                        <!-- 8.5 Security -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="SecurityCompliance" class="nav-link">
                                <i class="nav-icon fas fa-shield-alt"></i>
                                <p>Security & Compliance</p>
                            </a>
                        </li>

                        <!-- 8.6 Reporting -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="ReportingAnalytics" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Reporting & Analytics</p>
                            </a>
                        </li>

                        <!-- 8.9 Additional -->
                        <li class="nav-item">
                            <a asp-controller="Recruitment" asp-action="AdditionalFeatures" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Additional Features</p>
                            </a>
                        </li>



                        <!-- Privacy -->
                        <li class="nav-item">
                            <a asp-controller="Home"
                               asp-action="Privacy"
                               class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")">
                                <i class="nav-icon fas fa-user-shield"></i>
                                <p>Privacy</p>
                            </a>
                        </li>

                        <!-- Example Menu with Submenu -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>
                                    Settings
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview ml-3">
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>General</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>System</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </nav>

            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- /.main-sidebar -->
        <!-- Content Wrapper -->
        <div class="content-wrapper">

            <!-- Content Header -->
            <div class="content-header">
                <div class="container-fluid">
                    <h1 class="m-0">@title</h1>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>

        </div>
        <!-- /.content-wrapper -->
        <!-- Footer -->
        <footer class="main-footer text-center">
            <strong>&copy; @DateTime.Now.Year MpEsb.</strong>
            All rights reserved.
        </footer>

    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE -->
    <script src="~/dist/js/adminlte.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
