@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="row">

    <!-- Main Privacy Card -->
    <div class="col-lg-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary">
                <h3 class="card-title text-white">
                    <i class="fas fa-user-shield"></i> Privacy & Data Protection Policy
                </h3>
            </div>

            <div class="card-body">

                <h5>1. Information We Collect</h5>
                <p>
                    We collect personal information such as name, email address,
                    contact details, and system usage logs to improve service
                    performance and security.
                </p>

                <h5 class="mt-3">2. How We Use Information</h5>
                <ul>
                    <li>To provide and maintain our services</li>
                    <li>To improve system security and performance</li>
                    <li>To communicate updates and notifications</li>
                    <li>To comply with legal obligations</li>
                </ul>

                <h5 class="mt-3">3. Data Security</h5>
                <p>
                    We implement industry-standard security measures including
                    encryption, secure authentication, and access control
                    mechanisms to protect user data.
                </p>

                <h5 class="mt-3">4. User Rights</h5>
                <p>
                    Users have the right to access, update, or request deletion
                    of their personal information as per applicable data
                    protection laws.
                </p>

            </div>
        </div>
    </div>

</div>


<!-- Compliance & Contact Section -->
<div class="row mt-4">

    <!-- Compliance Card -->
    <div class="col-md-6">
        <div class="card border-left-success shadow-sm">
            <div class="card-body">
                <h5 class="text-success">
                    <i class="fas fa-check-circle"></i> Compliance Standards
                </h5>
                <p class="mt-2">
                    Our platform complies with:
                </p>
                <ul>
                    <li>GDPR (General Data Protection Regulation)</li>
                    <li>ISO 27001 Information Security Standards</li>
                    <li>Local Data Protection Regulations</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Contact Card -->
    <div class="col-md-6">
        <div class="card border-left-info shadow-sm">
            <div class="card-body">
                <h5 class="text-info">
                    <i class="fas fa-envelope"></i> Contact Information
                </h5>
                <p class="mt-2">
                    If you have questions about this Privacy Policy,
                    please contact:
                </p>

                <p>
                    <strong>Email:</strong> support@mpesb.com <br />
                    <strong>Phone:</strong> +1 234 567 890 <br />
                    <strong>Address:</strong> IT Park, Corporate City
                </p>
            </div>
        </div>
    </div>

</div>
