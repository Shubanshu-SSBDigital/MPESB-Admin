@{
    ViewData["Title"] = "Job & Vacancy Management";
}

<div class="row">

    <!-- Job Postings -->
    <div class="col-md-6">
        <div class="card border-left-info shadow-sm">
            <div class="card-header bg-info text-white">
                <h5><i class="fas fa-briefcase"></i> Job Postings</h5>
            </div>
            <div class="card-body">
                <p>Create and manage job postings, including position, description, and qualifications.</p>
            </div>
        </div>
    </div>

    <!-- Job Alerts -->
    <div class="col-md-6">
        <div class="card border-left-success shadow-sm">
            <div class="card-header bg-success text-white">
                <h5><i class="fas fa-bell"></i> Job Alerts</h5>
            </div>
            <div class="card-body">
                <p>Automatically notify eligible candidates via email, SMS, or in-app notifications.</p>
            </div>
        </div>
    </div>

</div>
