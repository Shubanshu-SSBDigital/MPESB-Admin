
@model MpEsb.ViewModel.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "MPESB - Official Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MPESB - Official Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>

     
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: url('/dist/img/OIP.jpeg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            min-height: 100vh;
        }

       
            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(13, 44, 84, 0.75);
                z-index: 0;
            }

       
        .gov-header {
            background: #0d2c54;
            color: white;
            padding: 15px 0;
            border-bottom: 4px solid #ff7a00;
            position: relative;
            z-index: 1;
        }

            .gov-header h2 {
                margin: 0;
                font-weight: 600;
            }

        .gov-subtitle {
            font-size: 14px;
            opacity: 0.9;
        }

     
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .card-header {
            background: #0d2c54;
            color: white;
            font-weight: 600;
            text-align: center;
            padding: 15px;
            border-radius: 10px 10px 0 0;
        }

        .form-label {
            font-weight: 600;
            font-size: 14px;
            color: #0d2c54;
        }

        .form-control {
            border-radius: 6px;
            font-size: 14px;
            padding: 10px;
        }

            .form-control:focus {
                border-color: #ff7a00;
                box-shadow: 0 0 5px rgba(255, 122, 0, 0.5);
            }

        .btn-login {
            background-color: #0d2c54;
            border: none;
            color: white;
            font-weight: 600;
            padding: 10px;
            border-radius: 6px;
            transition: 0.3s;
        }

            .btn-login:hover {
                background-color: #ff7a00;
            }

        .captcha-box {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .captcha-display {
            background: #f1f1f1;
            border: 1px solid #ccc;
            font-weight: bold;
            letter-spacing: 3px;
            text-align: center;
        }


       
        }









       
        .is-invalid {
            border: 1px solid #dc3545 !important;
            box-shadow: 0 0 4px rgba(220, 53, 69, 0.5);
        }

    
        .gov-footer {
            background: #0d2c54;
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 13px;
            position: relative;
            z-index: 1;
            margin-top: 40px;
        }

    </style>
</head>

<body>




    <!-- Government Header -->
    <div class="gov-header text-center">
        <div class="container">
            <h2>Madhya Pradesh Employees Selection Board (MPESB)</h2>
            <div class="gov-subtitle">Government of Madhya Pradesh</div>
        </div>
    </div>

    <!-- Login Section -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="login-card">

                    <div class="card-header">
                        Candidate Login Portal
                    </div>

                    <div class="p-4">

                        @if (ViewBag.LoginFail != null)
                        {
                            <div class="alert alert-danger text-center">
                                @ViewBag.LoginFail
                            </div>
                        }

                        <form asp-action="Login" method="post">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control"
                                       placeholder="Enter Registered Email ID"
                                       required />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password"
                                       class="form-control"
                                       placeholder="Enter Password"
                                       required />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- CAPTCHA -->
                            <label class="form-label">Security Verification (CAPTCHA)</label>

                            <div class="captcha-box mb-3">
                                <input type="text"
                                       id="GeneratedCaptcha"
                                       class="form-control captcha-display"
                                       style="width: 130px;"
                                       readonly />

                                <button type="button"
                                        class="btn btn-secondary"
                                        onclick="generateCaptcha()">
                                    <i class="fa fa-sync"></i>
                                </button>
                            </div>

                            <div class="mb-3">
                                <input type="text"
                                       id="UserCaptcha"
                                       name="UserCaptcha"
                                       class="form-control"
                                       placeholder="Enter CAPTCHA"
                                       required />
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-login">
                                    Login
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="gov-footer">
        © @DateTime.Now.Year MPESB | Official Government Portal | All Rights Reserved
    </div>

    <script>
        function generateCaptcha() {
            let captcha = Math.floor(10000 + Math.random() * 90000);
            document.getElementById("GeneratedCaptcha").value = captcha;
        }

        window.onload = generateCaptcha;

        document.querySelector("form").addEventListener("submit", function (e) {
            let generated = document.getElementById("GeneratedCaptcha").value;
            let userInput = document.getElementById("UserCaptcha").value;

            if (generated !== userInput) {
                alert("Invalid CAPTCHA. Please try again.");
                generateCaptcha();
                e.preventDefault();
            }
        });

        // Blur validation
        document.addEventListener("DOMContentLoaded", function () {

            const emailInput = document.querySelector("input[name='Email']");
            const passwordInput = document.querySelector("input[name='Password']");

            emailInput.addEventListener("blur", function () {
                if (emailInput.value.trim() === "") {
                    emailInput.classList.add("is-invalid");
                } else {
                    emailInput.classList.remove("is-invalid");
                }
            });

            passwordInput.addEventListener("blur", function () {
                if (passwordInput.value.trim() === "") {
                    passwordInput.classList.add("is-invalid");
                } else {
                    passwordInput.classList.remove("is-invalid");
                }
            });

        });
    </script>

</body>
</html>
